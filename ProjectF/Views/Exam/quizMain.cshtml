
@section styles {


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/angular-material/1.1.1/angular-material.min.css">
    <style>
        .courseCard {
            width: 200px;
            height: 20%;
        }

        .cardImg {
            width: 100%;
            height:220px;
        }
        .courseRow {
            margin-top:5%;
        }
        .mainView {
            height:700px;
        }
        .md-headline {
            text-align:center;
             font-size:1.5em;
        }
        .scoreBoard{
            height:100%;
            text-align:center;
            font-size:1.5em;
        }
        md-card{
            height:490px;
            width:250px;
            margin-top:50px;
        }
    </style>

}

<div ng-app="myApp" ng-controller="quizMainController" class="mainView" ng-cloak>
        <div class="row">
            <div class="col-sm-3 col-sm-offset-2">
                <div class="courseCard">
                    <md-card>
                        <img ng-src="{{htmlPath}}" class="md-card-image cardImg" alt="Washed Out">
                        <md-card-title>
                            <md-card-title-text>
                                <span class="md-headline">HTML5 測驗</span>
                                <br />
                                <span class="md-headline">共{{HTMLqaCounts}}題</span>
                            </md-card-title-text>
                        </md-card-title>
                        <md-card-content>
                            <h1 class="scoreBoard">
                                分數:{{htmlData.scrore}}
                            </h1>
                        </md-card-content>
                        <md-card-actions layout="column" layout-align="start">
                            <a href="/Exam/Quiz?course=1&userID={{currentUserID}}" class="btn btn-primary" ng-disabled="htmlData.testYet==true"ng-click="saveInfo('HTML',1)" >開始測驗</a>
                            @*<input type="button" class="btn btn-success" value="檢視" ng-disabled="htmlData.scrore=='尚未測驗'"ng-click="viewResult('HTML',$event)" />*@
                            <input type="button" ng-show="htmlData.scrore<60"  class="btn btn-warning" value="HMLT影片" ng-click="goToVideo('HTML')" title="觀看完影片後方可再次進行測驗">

                        </md-card-actions>
                    </md-card>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="courseCard">
                    <md-card>
                        <img ng-src="{{jsPath}}" class="md-card-image cardImg" alt="Washed Out">
                        <md-card-title>
                            <md-card-title-text>
                                <span class="md-headline">Javascript 測驗</span>
                                <br />
                                <span class="md-headline">共{{JavascriptqaCounts}}題</span>
                            </md-card-title-text>
                        </md-card-title>
                        <md-card-content>
                            <h1 class="scoreBoard">
                                分數:{{JavascriptData.scrore}}
                            </h1>
                        </md-card-content>
                        <md-card-actions layout="column" layout-align="start">
                            <a href="/Exam/Quiz" class="btn btn-primary" ng-disabled="JavascriptData.testYet==true" ng-click="saveInfo('Javascript',2)">開始測驗</a>
                            @*<input type="button" class="btn btn-success" value="檢視" ng-disabled="JavascriptData.scrore=='尚未測驗'" ng-click="viewResult('Javascript',$event)"/>*@
                            <input type="button" ng-show="JavascriptData.scrore<60"   class="btn btn-warning" value="JS影片" ng-click="goToVideo('Javascript')" title="觀看完影片後方可再次進行測驗">
                        </md-card-actions>
                    </md-card>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="courseCard">
                    <md-card>
                        <img ng-src="{{angPath}}" class="md-card-image cardImg" alt="Washed Out">
                        <md-card-title>
                            <md-card-title-text>
                                <span class="md-headline">AngularJS 測驗</span>
                                <br />
                                <span class="md-headline">共{{AngularjsqaCounts}}題</span>
                            </md-card-title-text>
                        </md-card-title>
                        <md-card-content>
                            <h1 class="scoreBoard">
                                分數:{{AngularJSData.scrore}}
                            </h1>
                        </md-card-content>
                        <md-card-actions layout="column" layout-align="start">
                        <a  href="/Exam/Quiz"class="btn btn-primary" ng-disabled="AngularJSData.testYet==true" ng-click="saveInfo('AngularJS',3)">開始測驗</a>  
                            @*<input type="button" class="btn btn-success" value="檢視"ng-disabled="AngularJSData.scrore=='尚未測驗'" ng-click="viewResult('AngularJS',$event)"/>*@
                            <input type="button" ng-show="AngularJSData.scrore<60" class="btn btn-warning" value="Angular影片" ng-click="goToVideo('AngularJS')" title="觀看完影片後方可再次進行測驗">

                        </md-card-actions>
                    </md-card>
                </div>
            </div>
        </div>


    </div>



