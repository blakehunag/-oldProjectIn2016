
@{
    ViewBag.Title = "Ang";
}
@section styles {


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/angular-material/1.1.1/angular-material.min.css">
    }

<div class="row" ng-app="myApp" ng-controller="MainController as ctrl" style="margin:0px 30px;" ng-cloak>
    <div class="col-lg-2"style="margin-top:50px">
        <div class="list-group">
            <a href="#" id="a1" class="list-group-item active" ng-click="ctrl.changeCourse(1)">HTML<br /> 目前題數:{{ctrl.HTMLqaCounts}}</a>
            <a href="#" id="a2" class="list-group-item" ng-click="ctrl.changeCourse(2)">Javascript<br /> 目前題數:{{ctrl.JavascriptqaCounts}}</a>
            <a href="#" id="a3" class="list-group-item" ng-click="ctrl.changeCourse(3)">AngularJS<br /> 目前題數:{{ctrl.AngularjsqaCounts}}</a>
        </div>
    </div>
    <div class="col-lg-7 listing">
 
        <div ng-repeat="data in  ctrl.datas" >
            <item-listing listing="data"></item-listing>
        </div>
        <md-whiteframe class="md-whiteframe-5dp" flex-sm="45" flex-gt-sm="35" flex-gt-md="100" layout layout-align="center center">
            <h1>沒有更多題目囉</h1>
        </md-whiteframe>
 
 
    </div>
    <div class="col-lg-3">
        <form id="Form">
          
            @*<div class="form-group" hidden="hidden">
                <label for="CID">CID</label>
                <input type="text" ng-model="ctrl.QA.CID" class="form-control" id="CID" name="CID" placeholder="CID">
            </div>*@

            <div class="form-group">
                <div class="form-group">
                    <label for="qNumber">題數</label>
                    <input type="text" ng-model="ctrl.QA.qNumber" class="form-control" id="qNumber" name="qNumber" placeholder="qNumber">
                </div>
                <div class="form-group">
                    <label for="Question">Question </label>
                    <input type="hidden" ng-model="ctrl.QA.QID" class="form-control" id="QID" name="QID">
                    <input type="text" ng-model="ctrl.QA.Question" class="form-control" id="Question" name="Question" placeholder="Question">
                </div>
                <div class="form-group">
                    <label for="Option1">Option1</label>
                    <input type="text" ng-model="ctrl.QA.Option1" class="form-control" id="Option1" name="Option1" placeholder="Option1">
                </div>
                <div class="form-group">
                    <label for="Option2">Option2</label>
                    <input type="text" ng-model="ctrl.QA.Option2" class="form-control" id="Option2" name="Option2" placeholder="Option2">
                </div>
                <div class="form-group">
                    <label for="Option3">Option3</label>
                    <input type="text" ng-model="ctrl.QA.Option3" class="form-control" id="Option3" name="Option3" placeholder="Option3">
                </div>
                <div class="form-group">
                    <label for="Option4">Option4</label>
                    <input type="text" ng-model="ctrl.QA.Option4" class="form-control" id="Option4" name="Option4" placeholder="Option4">
                </div>
                <div class="form-group">
                    <label for="Answer">Answer</label>
                    <input type="text" ng-model="ctrl.QA.Answer" class="form-control" id="Answer" name="Answer" placeholder="Answer">
                </div>
                <button type="button" class="btn btn-primary" id="buttonPost" ng-click="ctrl.add()">新增</button>
                <button type="button" class="btn btn-warning" id="buttonPut" ng-click="ctrl.update(ctrl.QA.QID)">確認修改</button>
                </div>
</form>
    </div>
</div>
@section scripts{
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/angular-resource.min.js"></script>
<script src="~/Scripts/angular-animate.min.js"></script>
<script src="~/Scripts/angular-cookies.min.js"></script>
<script src="~/Scripts/angular-route.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-material/1.1.1/angular-material.min.js"></script>
<script src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/t-114/svg-assets-cache.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-aria.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-messages.min.js"></script>
<script src="~/Scripts/dist.min.js"></script>
<script src="~/Scripts/app.js"></script>
<script src="~/ngController/MainController.js"></script>
<script src="~/directives/itemListing.js"></script>
}